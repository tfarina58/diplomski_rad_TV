<com.example.diplomski_rad_tv.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#181820"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descriptionTitle"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:focusable="false"
            android:text="@string/element_name_en"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/languageButton"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/header_button"
            android:gravity="center"
            android:paddingLeft="26dp"
            android:scaleType="fitCenter"
            android:text="@string/language_en"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/themeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/languageIcon"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:background="@drawable/english"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/languageButton"
            app:layout_constraintEnd_toEndOf="@+id/languageButton"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="@+id/languageButton"
            app:layout_constraintTop_toTopOf="@+id/languageButton" />

        <Button
            android:id="@+id/themeButton"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/header_button"
            android:gravity="center"
            android:paddingLeft="26dp"
            android:scaleType="fitCenter"
            android:text="@string/dark_theme_en"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/textClock"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/themeIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/moon"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/themeButton"
            app:layout_constraintEnd_toEndOf="@+id/themeButton"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintStart_toStartOf="@+id/themeButton"
            app:layout_constraintTop_toTopOf="@+id/themeButton" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/header_button"
            android:gravity="center"
            android:text="12:45:00 AM"
            android:textAlignment="center"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionContent"
            android:layout_width="820dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:gravity="start"
            android:maxLines="16"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:singleLine="false"
            android:text="@string/lorem_ipsum"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/descriptionImage1"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/highlighted_image_button_dark"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionContent"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage2"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionContent"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage3"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionContent"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage4"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage1"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage5"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage2"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage6"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage3"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage7"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage4"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage8"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage5"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/descriptionImage9"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage6"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/descriptionLink1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:background="@drawable/highlighted_image_button_dark"
            android:maxLength="72"
            android:paddingHorizontal="8dp"
            android:text="English"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionImage7" />

        <Button
            android:id="@+id/descriptionLink2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxLength="72"
            android:paddingHorizontal="8dp"
            android:text=""
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionLink1" />

        <Button
            android:id="@+id/descriptionLink3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="14dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxLength="72"
            android:paddingHorizontal="8dp"
            android:text=""
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionLink2"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.example.diplomski_rad_tv.CustomScrollView>
