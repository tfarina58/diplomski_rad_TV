        android:layout_width="284dp"
        android:layout_height="212dp"
        android:background="@drawable/image_button"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridButton6"
        app:layout_constraintEnd_toEndOf="@+id/gridButton6"
        app:layout_constraintStart_toStartOf="@+id/gridButton6"
        app:layout_constraintTop_toBottomOf="@+id/gridButtonTitle6"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/gridButtonTitle1"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="4dp"
        android:text="Real estate name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/gridButton1"
        app:layout_constraintEnd_toStartOf="@+id/gridButtonTitle2" />

    <TextView
        android:id="@+id/gridButtonTitle2"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:text="Real estate name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/gridButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gridButtonTitle3"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="4dp"
        android:text="Real estate name"
        android:textAlignment="center"
