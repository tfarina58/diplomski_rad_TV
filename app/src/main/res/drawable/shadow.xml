<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:left="100dp" android:right="100dp" android:top="100dp" android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#ff0000ff" /> <!-- Shadow color -->
            <corners android:radius="1000dp" /> <!-- Adjust corner radius -->
        </shape>
    </item>
    <!-- Image -->
    <item android:drawable="@drawable/vietnam" /> <!-- Replace your_image with your image resource -->
</layer-list>
