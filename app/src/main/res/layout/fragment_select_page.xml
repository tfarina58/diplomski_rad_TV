<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/pageIndexButton"
                android:layout_width="234dp"
                android:layout_height="76dp"
                android:background="@drawable/header_button"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/pageIndexIndex"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:layout_marginStart="30dp"
                android:inputType="number"
                android:text="7"
                android:background="@null"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="22sp"
                android:translationZ="2dp"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/pageIndexButton"
                app:layout_constraintStart_toStartOf="@+id/pageIndexButton"
                app:layout_constraintTop_toTopOf="@+id/pageIndexButton" />

            <TextView
                android:id="@+id/pageIndexSlash"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:text="/"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="22sp"
                android:translationZ="2dp"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/pageIndexButton"
                app:layout_constraintEnd_toStartOf="@+id/pageIndexTotal"
                app:layout_constraintStart_toEndOf="@+id/pageIndexIndex"
                app:layout_constraintTop_toTopOf="@+id/pageIndexButton" />

            <TextView
                android:id="@+id/pageIndexTotal"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:text="12"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="22sp"
                android:translationZ="2dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/pageIndexButton"
                app:layout_constraintEnd_toEndOf="@+id/pageIndexButton"
                app:layout_constraintTop_toTopOf="@+id/pageIndexButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>