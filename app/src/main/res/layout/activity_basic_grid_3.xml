<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backgroundGrid3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_theme"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/gridTitle3"
        android:layout_width="265dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/real_estate_name_en"
        android:textAlignment="textStart"
        android:textColor="@color/text_color_dark_mode"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ratingButton"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header_button"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/rating_en"
        android:paddingLeft="26dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/languageButton"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/rating"
        app:layout_constraintBottom_toBottomOf="@+id/ratingButton"
        app:layout_constraintEnd_toEndOf="@+id/ratingButton"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="@+id/ratingButton"
        app:layout_constraintTop_toTopOf="@+id/ratingButton" />

    <Button
        android:id="@+id/languageButton"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header_button"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/language_hr"
        android:paddingLeft="26dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/themeButton"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <ImageView
        android:id="@+id/languageIcon"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/croatian"
        app:layout_constraintBottom_toBottomOf="@+id/languageButton"
        app:layout_constraintEnd_toEndOf="@+id/languageButton"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="@+id/languageButton"
        app:layout_constraintTop_toTopOf="@+id/languageButton" />

    <Button
        android:id="@+id/themeButton"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header_button"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/light_theme_hr"
        android:paddingLeft="26dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/gridButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/themeIcon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/moon"
        app:layout_constraintBottom_toBottomOf="@+id/themeButton"
        app:layout_constraintEnd_toEndOf="@+id/themeButton"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="@+id/themeButton"
        app:layout_constraintTop_toTopOf="@+id/themeButton" />

    <Button
        android:id="@+id/gridButton"
        android:layout_width="138dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header_button"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/grid_en"
        android:paddingLeft="26dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/textClock"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gridIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/grid"
        android:translationZ="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridButton"
        app:layout_constraintEnd_toEndOf="@+id/gridButton"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/gridButton"
        app:layout_constraintTop_toTopOf="@+id/gridButton" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="12:45:00 AM"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:background="@drawable/header_button"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:queryBackground="@android:color/transparent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:iconifiedByDefault="false"
        android:background="@drawable/header_button"
        android:queryHint="Search..."
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pagination"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:background="@drawable/header_button"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/pageNumber"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:background="@null"
        android:inputType="number"
        android:text="7"
        android:textAlignment="textEnd"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="22sp"
        android:translationZ="2dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/pagination"
        app:layout_constraintStart_toStartOf="@+id/pagination"
        app:layout_constraintTop_toTopOf="@+id/pagination" />

    <TextView
        android:id="@+id/paginationSlash"
        android:layout_width="10dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="/"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="22sp"
        android:translationZ="2dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/pagination"
        app:layout_constraintEnd_toEndOf="@+id/pagination"
        app:layout_constraintStart_toStartOf="@+id/pagination"
        app:layout_constraintTop_toTopOf="@+id/pagination" />

    <TextView
        android:id="@+id/totalPagesNumber"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:text="12"
        android:textAlignment="textStart"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="22sp"
        android:translationZ="2dp"
        android:textColor="@android:color/white"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/pagination"
        app:layout_constraintEnd_toEndOf="@+id/pagination"
        app:layout_constraintTop_toTopOf="@+id/pagination"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/gridButtonBackground1"
        android:layout_width="288dp"
        android:layout_height="240dp"
        android:translationZ="0dp"
        android:background="@drawable/highlighted_image_button_dark"
        app:layout_constraintBottom_toBottomOf="@+id/gridButton1"
        app:layout_constraintEnd_toEndOf="@+id/gridButton1"
        app:layout_constraintStart_toStartOf="@+id/gridButton1"
        app:layout_constraintTop_toBottomOf="@+id/gridButtonTitle1" />

    <Button
        android:id="@+id/gridButtonBackground2"
        android:layout_width="288dp"
        android:layout_height="240dp"
        android:translationZ="0dp"
        android:background="@drawable/image_button"
        app:layout_constraintBottom_toBottomOf="@+id/gridButton2"
        app:layout_constraintEnd_toEndOf="@+id/gridButton2"
        app:layout_constraintStart_toStartOf="@+id/gridButton2"
        app:layout_constraintTop_toBottomOf="@+id/gridButtonTitle2" />

    <Button
        android:id="@+id/gridButtonBackground3"
        android:layout_width="288dp"
        android:layout_height="240dp"
        android:translationZ="0dp"
        android:background="@drawable/image_button"
        app:layout_constraintBottom_toBottomOf="@+id/gridButton3"
        app:layout_constraintEnd_toEndOf="@+id/gridButton3"
        app:layout_constraintStart_toStartOf="@+id/gridButton3"
        app:layout_constraintTop_toBottomOf="@+id/gridButtonTitle3" />

    <TextView
        android:id="@+id/gridButtonTitle1"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="4dp"
        android:text="Real estate name"
        android:translationZ="2dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/gridButton1"
        app:layout_constraintEnd_toStartOf="@+id/gridButtonTitle2" />

    <TextView
        android:id="@+id/gridButtonTitle2"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:text="Real estate name"
        android:translationZ="2dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/gridButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gridButtonTitle3"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="4dp"
        android:text="Real estate name"
        android:translationZ="2dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="14sp"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/gridButton3"
        app:layout_constraintStart_toEndOf="@+id/gridButtonTitle2" />

    <ImageButton
        android:id="@+id/gridButton1"
        android:layout_width="272dp"
        android:layout_height="153dp"
        android:background="#181820"
        android:scaleType="centerCrop"
        android:focusable="true"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridButton2"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501">
    </ImageButton>

    <ImageButton
        android:id="@+id/gridButton2"
        android:layout_width="272dp"
        android:layout_height="153dp"
        android:background="#181820"
        android:scaleType="centerCrop"
        android:focusable="true"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <ImageButton
        android:id="@+id/gridButton3"
        android:layout_width="272dp"
        android:layout_height="153dp"
        android:background="#181820"
        android:scaleType="centerCrop"
        android:focusable="true"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/gridButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/centerText"
        android:layout_width="329dp"
        android:layout_height="97dp"
        android:text="@string/no_estates_en"
        android:textAlignment="center"
        android:gravity="center"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="22sp"
        android:textColor="@color/text_color_dark_mode"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:indeterminate="true"
        android:translationZ="2dp"
        android:indeterminateTint="@color/loader_color_dark_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/enterPasswordLayout"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:visibility="invisible"
        android:translationZ="20dp"
        android:background="@color/dark_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/main_border_dark"
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/enterPasswordTitle"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text="@string/enter_password_en"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.11" />

            <EditText
                android:id="@+id/password"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:cursorVisible="false"
                android:background="@color/dark_theme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/passwordTitle"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_marginBottom="36dp"
                android:background="@color/dark_theme"
                android:text="@string/password_en"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/password"
                app:layout_constraintEnd_toEndOf="@+id/password"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="@+id/password" />


            <Button
                android:id="@+id/cancelButton"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/button_design"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/cancel_en"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.156"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/button_design"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/submit_password_en"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.843"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/chooseRatingLayout"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:visibility="invisible"
        android:translationZ="20dp"
        android:background="@color/dark_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ratingMain"
            android:background="@drawable/main_border_dark"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chooseRatingTitle"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text="@string/choose_rating_page_en"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.31" />

            <Button
                android:id="@+id/showRatingsButton"
                android:layout_width="112dp"
                android:layout_height="50dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_design"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/show_ratings_en"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/cancelButtonRating"
                android:layout_width="112dp"
                android:layout_height="50dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_design"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/cancel_en"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/submitRatingButton"
                android:layout_width="112dp"
                android:layout_height="50dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_design"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/my_rating_en"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>