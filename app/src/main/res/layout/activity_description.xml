<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#181820"
        android:orientation="vertical"
        android:focusable="true"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleDescription"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:text="@string/element_name_en"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="14sp"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/languageButton"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/header_button"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/language_en"
            android:paddingLeft="26dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/themeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/languageIcon"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:background="@drawable/united_kingdom"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/languageButton"
            app:layout_constraintEnd_toEndOf="@+id/languageButton"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="@+id/languageButton"
            app:layout_constraintTop_toTopOf="@+id/languageButton" />

        <Button
            android:id="@+id/themeButton"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/header_button"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/dark_theme_en"
            android:paddingLeft="26dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/textClock"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/themeIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/moon"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/themeButton"
            app:layout_constraintEnd_toEndOf="@+id/themeButton"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintStart_toStartOf="@+id/themeButton"
            app:layout_constraintTop_toTopOf="@+id/themeButton" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="12:45:00 AM"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:background="@drawable/header_button"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="820dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:maxLines="16"
            android:gravity="start"
            android:singleLine="false"
            android:text="@string/lorem_ipsum"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/highlighted_image_button_dark"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image1" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image2" />

        <ImageView
            android:id="@+id/image6"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <ImageView
            android:id="@+id/image7"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image4" />

        <ImageView
            android:id="@+id/image8"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image5" />

        <ImageView
            android:id="@+id/image9"
            android:layout_width="266dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image6" />

        <Button
            android:id="@+id/link1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:maxLength="72"
            android:paddingHorizontal="8dp"
            android:text="English"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@drawable/highlighted_image_button_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image7" />

        <Button
            android:id="@+id/link2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:maxLength="72"
            android:paddingHorizontal="8dp"
            android:text=""
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/link1" />

        <Button
            android:id="@+id/link3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="14dp"
            android:adjustViewBounds="true"
            android:maxLength="72"
            android:text=""
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:paddingHorizontal="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/link2"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
